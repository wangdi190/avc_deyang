                    <dx:FrameworkElements>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">浏览</TextBlock>
                        <Image Margin="12" Source="../Images/his.png" Stretch="Fill" />
                    </dx:FrameworkElements>
                </dxlc:Tile.ContentSource>
            </dxlc:Tile>
        </dxlc:TileLayoutControl>
    
