            <Border BorderThickness="1" BorderBrush="#FF426A9D">
                
            </Border>
        </Grid>
                <con:DayCurve x:Name="daycurve"></con:DayCurve>
            </dxwui:FlipView.Items>
        </dxwui:FlipView>

        <con:ZoneChartControl Grid.Row="1" Grid.ColumnSpan="2"  x:Name="ZoneChart"></con:ZoneChartControl>

    </Grid>
</UserControl>
